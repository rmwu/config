{
    "name": "Watermelon",
    "author": "Rachel Wu",
    "globals": {
        "foreground": "var(white)",
        "background": "var(black)",
        "caret": "color(var(cloud) alpha(0.9))",
        "block_caret": "color(var(cloud) alpha(0.2))",
        "block_caret_border": "color(var(cloud) alpha(0.8))",
        "invisibles": "color(var(white) alpha(0.35))",
        "line_highlight": "var(wasabi)",
        "selection": "var(grey)",
        "selection_border": "var(black)",
        "misspelling": "var(maple)",
        "active_guide": "color(var(maple) alpha(0.69))",
        "find_highlight_foreground": "var(black)",
        "find_highlight": "var(maple)",
        "brackets_options": "underline",
        "brackets_foreground": "color(var(white) alpha(0.65))",
        "bracket_contents_options": "underline",
        "bracket_contents_foreground": "color(var(white) alpha(0.65))",
        "tags_options": "stippled_underline",
        "gutter_foreground_highlight": "var(black)"
    },
    "variables": {
        "black": "rgba(45, 45, 45, 1)",
        "maple": "rgba(241, 133, 131, 1)",
        "wasabi": "rgba(217, 226, 180, 1)",
        "orange": "rgba(234, 175, 140, 1)",
        "peach": "rgba(244, 172, 180, 1)",
        "mugwort": "rgba(162, 211, 167, 1)",
        "matcha": "rgba(179, 200, 160, 1)",
        "white": "rgba(255, 255, 255, 1)",
        "cloud": "rgba(248, 245, 254, 1)"
    },
    "rules":
    [
        {
            "name": "Comment",
            "scope": "comment",
            "foreground": "var(matcha)"
        },
        {
            "name": "String",
            "scope": "string",
            "foreground": "var(wasabi)"
        },
        {
            "name": "Number",
            "scope": "constant.numeric",
            "foreground": "var(peach)"
        },
        {
            "name": "Number suffix",
            "scope": "storage.type.numeric",
            "foreground": "var(orange)",
            "font_style": "italic"
        },
        {
            "name": "Built-in constant",
            "scope": "constant.language",
            "foreground": "var(peach)"
        },
        {
            "name": "User-defined constant",
            "scope": "constant.character, constant.other",
            "foreground": "var(peach)"
        },
        {
            "name": "Variable",
            "scope": "variable"
        },
        {
            "name": "Keyword",
            "scope": "keyword - (source.c keyword.operator | source.c++ keyword.operator | source.objc keyword.operator | source.objc++ keyword.operator), keyword.operator.word, source.ruby keyword.declaration",
            "foreground": "var(maple)"
        },
        {
            "name": "Annotation Punctuation",
            "scope": "punctuation.definition.annotation",
            "foreground": "var(maple)"
        },
        {
            "name": "JavaScript Dollar",
            "scope": "variable.other.dollar.only.js",
            "foreground": "var(maple)"
        },
        {
            "name": "Storage",
            "scope": "storage",
            "foreground": "var(maple)"
        },
        {
            "name": "Storage type",
            "scope": "storage.type",
            "foreground": "var(orange)",
            "font_style": "italic"
        },
        {
            "name": "Entity name",
            "scope": "entity.name - (entity.name.filename | entity.name.section | entity.name.tag | entity.name.label)",
            "foreground": "var(mugwort)"
        },
        {
            "name": "Inherited class",
            "scope": "entity.other.inherited-class",
            "foreground": "var(mugwort)",
            "font_style": "italic"
        },
        {
            "name": "Function argument",
            "scope": "variable.parameter - (source.c | source.c++ | source.objc | source.objc++)",
            "foreground": "var(maple)",
            "font_style": "italic"
        },
        {
            "name": "Language variable",
            "scope": "variable.language",
            "foreground": "var(maple)",
            "font_style": "italic"
        },
        {
            "name": "Tag name",
            "scope": "entity.name.tag | meta.mapping.key string.unquoted",
            "foreground": "var(maple)"
        },
        {
            "name": "Tag attribute",
            "scope": "entity.other.attribute-name",
            "foreground": "var(matcha)"
        },
        {
            "name": "Function call",
            "scope": "variable.function, variable.annotation",
            "foreground": "var(orange)"
        },
        {
            "name": "Library function",
            "scope": "support.function, support.macro",
            "foreground": "var(orange)"
        },
        {
            "name": "Library constant",
            "scope": "support.constant",
            "foreground": "var(orange)"
        },
        {
            "name": "Library class/type",
            "scope": "support.type, support.class",
            "foreground": "var(orange)",
            "font_style": "italic"
        },
        {
            "name": "Library variable",
            "scope": "support.other.variable"
        },
        {
            "name": "Invalid",
            "scope": "invalid",
            "foreground": "var(cloud)",
            "background": "var(maple)"
        },
        {
            "name": "Invalid deprecated",
            "scope": "invalid.deprecated",
            "foreground": "var(cloud)",
            "background": "var(peach)"
        },
        {
            "name": "JSON String",
            "scope": "meta.structure.dictionary.json string.quoted.double.json",
            "foreground": "var(matcha)"
        },
        {
            "name": "YAML String",
            "scope": "string.unquoted.yaml",
            "foreground": "var(cloud)"
        },
        {
            "name": "diff.header",
            "scope": "meta.diff, meta.diff.header",
            "foreground": "var(matcha)"
        },
        {
            "name": "markup headings",
            "scope": "markup.heading",
            "font_style": "bold"
        },
        {
            "name": "markup headings",
            "scope": "markup.heading punctuation.definition.heading",
            "foreground": "var(maple)"
        },
        {
            "name": "markup h1",
            "scope": "markup.heading.1 punctuation.definition.heading",
            "foreground": "var(maple)"
        },
        {
            "name": "markup links",
            "scope": "markup.underline.link",
            "foreground": "var(orange)"
        },
        {
            "name": "markup bold",
            "scope": "markup.bold",
            "font_style": "bold"
        },
        {
            "name": "markup italic",
            "scope": "markup.italic",
            "font_style": "italic"
        },
        {
            "name": "markup underline",
            "scope": "markup.underline",
            "font_style": "underline"
        },
        {
            "name": "markup bold/italic",
            "scope": "markup.italic markup.bold | markup.bold markup.italic",
            "font_style": "bold italic"
        },
        {
            "name": "markup bold/underline",
            "scope": "markup.underline markup.bold | markup.bold markup.underline",
            "font_style": "bold underline"
        },
        {
            "name": "markup italic/underline",
            "scope": "markup.underline markup.italic | markup.italic markup.underline",
            "font_style": "italic underline"
        },
        {
            "name": "markup bold/italic/underline",
            "scope": "markup.bold markup.italic markup.underline | markup.bold markup.underline markup.italic | markup.italic markup.bold markup.underline | markup.italic markup.underline markup.bold | markup.underline markup.bold markup.italic | markup.underline markup.italic markup.bold",
            "font_style": "bold italic underline"
        },
        {
            "name": "markup hr",
            "scope": "punctuation.definition.thematic-break",
            "foreground": "var(matcha)"
        },
        {
            "name": "markup blockquote",
            "scope": "markup.quote punctuation.definition.blockquote",
            "foreground": "var(matcha)"
        },
        {
            "name": "markup bullets",
            "scope": "markup.list.numbemaple.bullet",
            "foreground": "var(peach)"
        },
        {
            "name": "markup bullets",
            "scope": "markup.list.unnumbemaple.bullet | (markup.list.numbemaple punctuation.definition)",
            "foreground": "color(var(white) alpha(0.67))"
        },
        {
            "name": "markup code",
            "scope": "markup.raw",
            "background": "color(var(white) alpha(0.094))"
        },
        {
            "name": "markup punctuation",
            "scope": "markup.raw punctuation.definition.raw",
            "foreground": "color(var(white) alpha(0.67))"
        },
        {
            "name": "markup punctuation",
            "scope": "text & (punctuation.definition.italic | punctuation.definition.bold | punctuation.definition.raw | punctuation.definition.link | punctuation.definition.metadata | punctuation.definition.image | punctuation.separator.table-cell | punctuation.section.table-header | punctuation.definition.constant)",
            "foreground": "color(var(white) alpha(0.67))"
        },
        {
            "name": "diff.deleted",
            "scope": "markup.deleted",
            "foreground": "var(maple)"
        },
        {
            "name": "diff.inserted",
            "scope": "markup.inserted",
            "foreground": "var(matcha)"
        },
        {
            "name": "diff.changed",
            "scope": "markup.changed",
            "foreground": "var(wasabi)"
        },
        {
            "scope": "constant.numeric.line-number.find-in-files - match",
            "foreground": "color(var(peach) alpha(0.63))"
        },
        {
            "scope": "entity.name.filename",
            "foreground": "var(wasabi)"
        },
        {
            "scope": "message.error",
            "foreground": "var(maple)"
        },
        {
            "scope": "message.warning",
            "foreground": "var(maple)"
        },
        {
            "scope": "message.info",
            "foreground": "var(orange)"
        },
        {
            "scope": "diff.deleted",
            "background": "hsla(338, 50%, 56%, 0.15)",
            "foreground_adjust": "l(+ 5%)"
        },
        {
            "scope": "diff.deleted.char",
            "background": "hsla(338, 65%, 56%, 0.30)",
            "foreground_adjust": "l(+ 10%)"
        },
        {
            "scope": "diff.inserted",
            "background": "hsla(80, 50%, 53%, 0.15)",
            "foreground_adjust": "l(+ 5%)"
        },
        {
            "scope": "diff.inserted.char",
            "background": "hsla(80, 65%, 53%, 0.30)",
            "foreground_adjust": "l(+ 10%)"
        }
    ]
}

